{
  "name": "envalid",
  "version": "8.0.0",
  "description": "Validation for your environment variables",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=8.12"
  },
  "engineStrict": true,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsc --watch",
    "prepare": "tsc",
    "coverage": "jest --coverage",
    "lint": "tsc && prettier --list-different --write src tests",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/af/envalid"
  },
  "keywords": [
    ".env",
    "dotenv",
    "env",
    "env var",
    "environment",
    "environment variable",
    "validation"
  ],
  "dependencies": {
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.5",
    "@types/node": "20.6.2",
    "expect-type": "^0.16.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "author": "Aaron Franks",
  "license": "MIT",
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
